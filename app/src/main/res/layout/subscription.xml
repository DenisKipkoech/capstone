<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/podcast_poster"
        android:layout_width="@dimen/pic_dimen"
        android:layout_height="@dimen/pic_dimen"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_podcast_name"
        style="@style/primaryText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/podcast_poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="The Joe Reagan Experience" />


</android.support.constraint.ConstraintLayout>